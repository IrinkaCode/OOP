<Window x:Class="Lesson40.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson40"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="Форма регистрации" Height="550" Width="400">
    <Canvas>

        <TextBox x:Name="NameTextBox" materialDesign:HintAssist.Hint="Имя" Canvas.Left="25" Canvas.Top="58" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"/>
        <TextBox x:Name="SurnameTextBox" materialDesign:HintAssist.Hint="Фамилия" Canvas.Left="25" Canvas.Top="131" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"/>
        <TextBox x:Name="AgeTextBox" materialDesign:HintAssist.Hint="Возраст" Canvas.Left="25" Canvas.Top="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350"/>
        <Button Content="Зарегистрироваться" Canvas.Left="203" Canvas.Top="427" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175"/>
        <DatePicker
              Width="353" materialDesign:HintAssist.Hint="Дата"
              Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Canvas.Left="25" Canvas.Top="267" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <PasswordBox
              x:Name="FloatingPasswordBox"
              materialDesign:HintAssist.Hint="Пароль"
              materialDesign:HintAssist.Foreground="Green"
              materialDesign:TextFieldAssist.UnderlineBrush="Green"
              Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" Canvas.Left="25" Canvas.Top="348" HorizontalAlignment="Left" VerticalAlignment="Center" Width="199" RenderTransformOrigin="0.5,0.638" />
        <Button Content="Генерировать" Canvas.Left="239" Canvas.Top="349" HorizontalAlignment="Left" VerticalAlignment="Center" Width="136"/>

    </Canvas>
</Window>
