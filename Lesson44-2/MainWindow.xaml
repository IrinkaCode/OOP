<Window x:Class="Lesson44_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson44_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="1" Background="LightBlue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0" Width="20" Height="20" Fill="Red"
             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Кнопка"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              FontSize="16" Margin="10,0"/>
            </Grid>
        </Button>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <Rectangle Fill="LightYellow" Height="30" Margin="8" Stroke="Black"/>
            <Rectangle Fill="LightYellow" Height="30" Margin="8" Stroke="Black"/>
            <Rectangle Fill="LightYellow" Height="30" Margin="8" Stroke="Black"/>
        </StackPanel>
        <Rectangle Grid.Row="2" Grid.Column="1" Stroke="Black" Fill="LightGreen" Margin="30"/>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <Button Content="Кнопка 1" Margin="8"/>
            <Button Content="Кнопка 2" Margin="8"/>
            <Button Content="Кнопка 3" Margin="8"/>
            <Button Content="Кнопка 4" Margin="8"/>
            <Button Content="Кнопка 5" Margin="8"/>
            <Button Content="Кнопка 6" Margin="8"/>
            <Button Content="Кнопка 7" Margin="8"/>
            <Button Content="Кнопка 8" Margin="8"/>
        </StackPanel>

    </Grid>
</Window>
