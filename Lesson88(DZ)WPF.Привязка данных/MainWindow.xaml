<Window x:Class="Lesson88_DZ_WPF.Привязка_данных.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson88_DZ_WPF.Привязка_данных"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="530">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <StackPanel Margin="20">
        <TextBox Text="{Binding Person.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
        <TextBox Text="{Binding Person.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
        <TextBox Text="{Binding Person.Age, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
        <Button Content="Получить данные" Command="{Binding GetDataCommand}" />
    </StackPanel>
</Window>
