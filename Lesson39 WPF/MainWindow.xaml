<Window x:Class="Lesson39_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Lesson39_WPF"
        mc:Ignorable="d"
        Title="Мое первое приложение" Height="250" Width="250" Background="Aqua">

    <Canvas>
        <Button Content="Нажми меня" Height="47" Canvas.Left="45" Canvas.Top="127" HorizontalAlignment="Left" VerticalAlignment="Top" Width="129" Click="Button_Click"/>
        <TextBox x:Name="FirstName" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center"  Width="207"
                materialDesign:HintAssist.Hint="Первая" Canvas.Left="23" Canvas.Top="17" Height="28"/>
        <TextBox x:Name="SecondName" Canvas.Left="23" TextWrapping="Wrap" Canvas.Top="76" Width="208" HorizontalAlignment="Center" VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Вторая" Height="28"/>
        <Label x:Name="Result" Content="Label" Canvas.Left="70" Canvas.Top="200" Width="100"
               FontSize="16"/>
    </Canvas>
</Window>
